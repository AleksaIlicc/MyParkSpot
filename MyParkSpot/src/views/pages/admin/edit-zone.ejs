<!doctype html>
<html lang="en">
  <head>
    <title>MyParkSpot - Edit Zone</title>
    <%- include('../../shared/includes/meta') %> <%-
    include('../../shared/includes/styles') %>
  </head>
  <body class="bg-background">
    <%- include('../../shared/partials/header') %>
    <main class="min-h-screen p-4 sm:p-6">
      <div class="mx-auto flex w-full max-w-5xl flex-col md:flex-row">
        <%- include('./partials/aside.ejs') %>

        <section class="w-full space-y-6 p-6 md:w-9/12">
          <h1 class="mb-4 font-serif text-2xl font-medium md:mb-6">
            Edit Zone
          </h1>

          <form action="/admin/zones/edit/<%= zone.id %>" method="post">
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="name">
                  Zone Name
                </label>
                <div class="mt-2">
                  <input
                    type="text"
                    id="name"
                    name="name"
                    value="<%= zone.name %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm"
                    required />
                </div>
              </div>

              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="type">
                  Zone Type
                </label>
                <div class="mt-2">
                  <input
                    type="text"
                    id="type"
                    name="type"
                    value="<%= zone.type %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm"
                    required />
                </div>
              </div>

              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="maxParkingDuration">
                  Max Parking Duration (minutes)
                </label>
                <div class="mt-2">
                  <input
                    type="number"
                    id="maxParkingDuration"
                    name="maxParkingDuration"
                    min="0"
                    value="<%= typeof zone !== 'undefined' ? zone.maxParkingDuration : '' %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm" />
                </div>
              </div>

              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="maxExtensionDuration">
                  Max Extension Duration (minutes)
                </label>
                <div class="mt-2">
                  <input
                    type="number"
                    id="maxExtensionDuration"
                    name="maxExtensionDuration"
                    min="0"
                    value="<%= typeof zone !== 'undefined' ? zone.maxExtensionDuration : '' %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm" />
                </div>
              </div>

              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="baseCost">
                  Base Cost (EUR/hour)
                </label>
                <div class="mt-2">
                  <input
                    type="number"
                    id="baseCost"
                    name="baseCost"
                    step="0.01"
                    min="0"
                    value="<%= typeof zone !== 'undefined' ? zone.baseCost : '' %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm"
                    required />
                </div>
              </div>

              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="extensionCost">
                  Extension Cost (EUR/hour)
                </label>
                <div class="mt-2">
                  <input
                    type="number"
                    id="extensionCost"
                    name="extensionCost"
                    step="0.01"
                    min="0"
                    value="<%= typeof zone !== 'undefined' ? zone.extensionCost : '' %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm" />
                </div>
              </div>

              <div>
                <label
                  class="block text-sm font-medium text-gray-900"
                  for="dailyPassCost">
                  Daily Pass Cost (EUR)
                </label>
                <div class="mt-2">
                  <input
                    type="number"
                    id="dailyPassCost"
                    name="dailyPassCost"
                    step="0.01"
                    min="0"
                    value="<%= typeof zone !== 'undefined' ? zone.dailyPassCost : '' %>"
                    class="block w-full rounded-full border border-gray-300 px-4 py-2 shadow-sm sm:text-sm" />
                </div>
              </div>
            </div>

            <div class="mt-6 flex justify-end space-x-4">
              <a
                href="/admin/zones"
                class="btn-sm btn transform rounded-full border px-6 py-2">
                Cancel
              </a>
              <button
                type="submit"
                class="btn-sm btn transform rounded-full border bg-primary px-6 py-2 font-medium text-white transition duration-300 ease-in-out hover:scale-105">
                Edit Zone
              </button>
            </div>
          </form>
        </section>
      </div>
    </main>
    <%- include('../../shared/includes/scripts') %>
  </body>
</html>
