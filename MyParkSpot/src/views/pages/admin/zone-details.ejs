<!doctype html>
<html lang="en">
  <head>
    <title>MyParkSpot - Zone Details</title>
    <%- include('../../shared/includes/meta') %> <%-
    include('../../shared/includes/styles') %>
  </head>
  <body class="bg-background">
    <%- include('../../shared/partials/header') %>
    <main class="min-h-screen p-4 sm:p-6">
      <div class="mx-auto flex w-full max-w-5xl flex-col md:flex-row">
        <%- include('./partials/aside.ejs') %>

        <section class="w-full space-y-6 p-6 md:w-10/12">
          <h1 class="mb-4 font-serif text-2xl font-medium md:mb-6">
            Zone Details
          </h1>

          <div
            class="grid grid-cols-1 gap-5 rounded-lg border border-gray-200 p-6 shadow md:grid-cols-2">
            <h2 class="text-xl font-medium text-gray-800 md:col-span-2">
              <%= zone.name %>
            </h2>
            <p class="text-gray-600">
              Max Parking Duration: <%= zone.maxParkingDuration ?
              zone.maxParkingDuration + ' minutes' : 'N/A' %>
            </p>
            <p class="text-gray-600">
              Max Extension Duration: <%= zone.maxExtensionDuration ?
              zone.maxExtensionDuration + ' minutes' : 'N/A' %>
            </p>
            <p class="text-gray-600">
              Base Cost: <%= zone.baseCost + ' ' + 'EUR' %>
            </p>
            <p class="text-gray-600">
              Extension Cost: <%= zone.extensionCost ? zone.extensionCost + ' '
              + 'EUR' : 'N/A' %>
            </p>
            <p class="text-gray-600">
              Daily Pass Cost: <%= zone.dailyPassCost ? zone.dailyPassCost + ' '
              + 'EUR': 'N/A' %>
            </p>
            <p class="text-gray-600">Type: <%= zone.type %></p>
            <p class="text-gray-600 md:col-span-2">
              Number of Parking Spots: <%= zone.parkingSpots.length %>
            </p>
            <div class="flex justify-end md:col-span-2">
              <a
                href="/admin/zones"
                class="inline-block rounded-full bg-primary px-4 py-2 font-medium text-white transition duration-300 ease-in-out hover:bg-hover">
                Back
              </a>
            </div>
          </div>
        </section>
      </div>
    </main>
    <%- include('../../shared/includes/scripts') %>
  </body>
</html>
